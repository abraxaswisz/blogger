<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="login">
      <% if logged_in? %>
        <p><%= "Zalogowany jako #{current_user.email}" %></p>
        <p><%= link_to "Logout", logout_path %></p>
       <% else %>
       <p>Niezalogowany</p>
       <p>Please <%= link_to "Login", login_path %></p>
       <% end %>
    </div>
    <div class="container">
      <p class="flash"><%= flash.notice %></p>
      <%= yield %>
    </div>
  </body>
</html>
