<h2>All Articles</h2>
<section class="articles">
	<ul class="article">
		<% @articles.each do |article| %>
			<li>
					<h3 class="title">
						<%= link_to article.title, article_path(article), class: 'article_title' %>
					</h3>
					<p>
						<%= article.body %>
					</p>
					<p>
						<% if article.image.exists? %>
							<%= image_tag article.image.url(:thumb) %>
								<% end %>
					</p>
					<h5>
						Created at:
						<%= article.created_at.strftime("%H:%M:%S, %d-%m-%y") %>
					</h5>
					<% if logged_in? %>
						<h6>
							<%= link_to "delete", article_path(article), data: {confirm: "Are you sure?"}, method: :delete %>
						</h6>
						<% end %>
			</li>
			<% end %>
	</ul>
</section>
