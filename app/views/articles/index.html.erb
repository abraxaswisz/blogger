<h1>All Articles</h1>
<ul id="articles">
	<% @articles.each do |article| %>
	<li>
		<h2><%= link_to article.title, article_path(article), class: 'article_title' %></h2>
		<p>
			<%= article.body %> 
		</p>
		<p>
			<%= image_tag article.image.url(:thumb) %>
		</p>
		<p>
			Created at: <%= article.created_at.strftime("%H:%M:%S, %d-%m-%y") %>
		</p>
		<% if logged_in? %>
		<p>
			<%= link_to "delete", article_path(article), data: {confirm: "Are you sure?"}, method: :delete %>
		</p>
		<% end %>
	</li>
	<% end %>
	<h3>Aktualna godzina to: <%= Time.now.strftime("%H:%M:%S, %d-%m-%y") %> </h3>
</ul>
 <% if logged_in? %>
 <%=  link_to "Create new article", new_article_path, class: 'new_article'  %>
 <% end %>